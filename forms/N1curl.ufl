from ufl import *
import basix.ufl

element = basix.ufl.element("N1curl", basix.CellType.tetrahedron, $degree)
coord_element = basix.ufl.element("Lagrange", basix.CellType.tetrahedron, 1, shape=(3,))
mesh = Mesh(coord_element)

V = FunctionSpace(mesh, element)
W = FunctionSpace(mesh, basix.ufl.element("Lagrange", basix.CellType.tetrahedron, 1))

u = TrialFunction(V)
v = TestFunction(V)
k = Coefficient(W)
a = k*inner(curl(u), curl(v))*dx

un = Coefficient(V)
L = action(a, un)