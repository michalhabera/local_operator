from ufl import *
import basix.ufl

element = basix.ufl.element("Lagrange", basix.CellType.$cell, $degree)
mesh_element = basix.ufl.element("Lagrange", basix.CellType.$cell, 1, shape=(3,))
mesh = Mesh(mesh_element)

V = FunctionSpace(mesh, element)
u = TrialFunction(V)
v = TestFunction(V)

W = FunctionSpace(mesh, basix.ufl.element("Lagrange", basix.CellType.$cell, 1))
k = Coefficient(W)

a = k*inner(grad(u), grad(v))*dx

un = Coefficient(V)
L = action(a, un)